# API Keys for Document Processing
MISTRAL_API_KEY=your_mistral_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here  
OPENAI_API_KEY=your_openai_api_key_here

# Model Configuration - Algorithmic Ingestion
MISTRAL_PARSING_MODEL=mistral-ocr-latest
ANTHROPIC_DESCRIPTION_MODEL=claude-3-5-sonnet-20241022
OPENAI_INGESTION_EMBEDDING_MODEL=text-embedding-3-large

# Model Configuration - Semantic Ingestion
OPENAI_CONTEXTUAL_RETRIEVAL_MODEL=gpt-4o
OPENAI_VISION_MODEL=gpt-4o

# Model Configuration - Large Document Semantic Ingestion
OPENAI_DOCUMENT_ANALYSIS_MODEL=gpt-4o

# Qdrant Configuration
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=your_qdrant_api_key_here
QDRANT_COLLECTION_NAME=documents

# Qdrant Configuration - Semantic Ingestion
QDRANT_SEMANTIC_COLLECTION_NAME=semantic_redesign

# Qdrant Configuration - Large Document Semantic Ingestion
QDRANT_SEMANTIC_LARGE_DOCUMENT_COLLECTION_NAME=semantic_large_document_redesign

# Processing Configuration - Algorithmic Ingestion
CHUNK_SIZE=1000
CHUNK_OVERLAP=150
MAX_IMAGE_SIZE_MB=20
BATCH_SIZE=10
MEMORY_LIMIT_MB=8000

# Processing Configuration - Semantic Ingestion
SEMANTIC_CHUNK_SIZE=800
SEMANTIC_CHUNK_OVERLAP=200
CONTEXTUAL_CONTEXT_SIZE=100
SEMANTIC_BATCH_SIZE=10
MAX_CONCURRENT_REQUESTS=5
ENABLE_PROMPT_CACHING=true
CACHE_TTL_SECONDS=3600

# Parallel Processing Configuration - Semantic Ingestion
ENABLE_PARALLEL_PROCESSING=true
MAX_PARALLEL_DOCUMENTS=4
MAX_PARALLEL_CHUNKS=8
EMBEDDING_BATCH_SIZE=20
PARALLEL_CHUNK_PROCESSING=true

# Large Document Processing Configuration
ENABLE_DOCUMENT_STRUCTURE_ANALYSIS=true
ENABLE_SECTION_BASED_CONTEXTUALIZATION=true
ENHANCED_CONTEXT_SIZE=200
DOCUMENT_SUMMARY_SIZE=500
SECTION_CONTEXT_SIZE=150
ENABLE_RERANKING=false
RERANKER_MODEL=cross-encoder/ms-marco-MiniLM-L-6-v2
ENABLE_HYBRID_RETRIEVAL=false
LONG_DOCUMENT_THRESHOLD=50000
PRESERVE_DOCUMENT_STRUCTURE=true
MAX_DOCUMENT_CHUNK_SIZE=2000
MAX_TOKENS_PER_CHUNK=6000
ADAPTIVE_CHUNK_SIZING=true

# Knowledge Graph Configuration (Neo4j)
NEO4J_URI=neo4j://127.0.0.1:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=password
NEO4J_DATABASE=neo4j
OPENAPI_KNOWLEDGE_GRAPH_MODEL=gpt-4o

# Logging Configuration  
LOG_LEVEL=INFO